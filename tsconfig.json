{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "module": "commonjs",
      "module": "ESNext",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "outDir": "./dist/",
      "sourceMap": true,
      "target": "es5"
  },
  "lib": [
    "dom",
    "es2015"
  ],
  "include": [
      "./src/**/*"
  ],
  "exclude": [
      "node_modules"
  ],  
}